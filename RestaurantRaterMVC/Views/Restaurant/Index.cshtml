@model IEnumerable<RestaurantRaterMVC.Models.Restaurant>

@{
    ViewBag.Title = "Restaurants";
}

<h2>Restaurant</h2>

<p>
    @Html.ActionLink("Rate a Restaurant","Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodType)
        </th>
        <th></th>
    </tr>
    @foreach (var restaurant in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => restaurant.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => restaurant.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem=> restaurant.FoodType)
            </td>
            <td>
                @Html.ActionLink("Update Info", "Edit", new { id = restaurant.RestaurantID}) |
                @Html.ActionLink("More Info", "Details", new { id =restaurant.RestaurantID}) |
                @Html.ActionLink("Nuke from Orbit", "Delete", new { id =restaurant.RestaurantID})
            </td>
        </tr>
    }
</table>